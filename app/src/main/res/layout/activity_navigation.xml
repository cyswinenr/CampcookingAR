<?xml version="1.0" encoding="utf-8"?>
<!-- 导航页 - 竖屏布局 -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".NavigationActivity">

    <!-- 顶部团队信息栏 -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/fire_orange"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 返回按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:icon="@android:drawable/ic_menu_revert"
            app:iconTint="@android:color/white"
            app:iconPadding="4dp"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/teamNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="野炊小组"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_title"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 内容区域 - 4个按钮横向排列 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 团队信息登记 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/teamInfoButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="6dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="28dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="@android:color/transparent">

            <!-- 按钮内容 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/nav_button_team_info"
                android:padding="16dp">

                    <ImageView
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:src="@android:drawable/ic_menu_agenda"
                        android:tint="@android:color/white"
                        android:alpha="0.95"
                        android:elevation="4dp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="团队信息"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:shadowColor="#40000000"
                        android:shadowDx="0"
                        android:shadowDy="2"
                        android:shadowRadius="4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登记"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:alpha="0.9"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 团队分工 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/teamDivisionButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="6dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="28dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="@android:color/transparent">

            <!-- 按钮内容 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/nav_button_team_division"
                android:padding="16dp">

                    <ImageView
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:src="@android:drawable/ic_menu_sort_by_size"
                        android:tint="@android:color/white"
                        android:alpha="0.95"
                        android:elevation="4dp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="团队分工"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:shadowColor="#40000000"
                        android:shadowDx="0"
                        android:shadowDy="2"
                        android:shadowRadius="4" />

                </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 微课视频 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/videoSection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="6dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="28dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="@android:color/transparent">

            <!-- 按钮内容 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/nav_button_video"
                android:padding="16dp">

                    <ImageView
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:src="@android:drawable/ic_media_play"
                        android:tint="@android:color/white"
                        android:alpha="0.95"
                        android:elevation="4dp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="微课视频"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:shadowColor="#40000000"
                        android:shadowDx="0"
                        android:shadowDy="2"
                        android:shadowRadius="4" />

                </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 过程记录 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/recordSection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="6dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="28dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="@android:color/transparent">

            <!-- 按钮内容 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/nav_button_record"
                android:padding="16dp">

                    <ImageView
                        android:layout_width="88dp"
                        android:layout_height="88dp"
                        android:src="@android:drawable/ic_menu_edit"
                        android:tint="@android:color/white"
                        android:alpha="0.95"
                        android:elevation="4dp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="过程记录"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:shadowColor="#40000000"
                        android:shadowDx="0"
                        android:shadowDy="2"
                        android:shadowRadius="4" />

                </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

