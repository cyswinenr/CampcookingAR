<?xml version="1.0" encoding="utf-8"?>
<!-- 主界面 - 竖屏布局，信息采集表单（重新设计） -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 顶部标题 -->
        <TextView
            android:id="@+id/pageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team_info_title"
            android:textColor="@color/title_color"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/pageSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team_info_subtitle"
            android:textColor="@color/subtitle_color"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- 表单区域 -->
        <LinearLayout
            android:id="@+id/formSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 学校 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/hint_school"
                app:boxBackgroundMode="outline"
                app:startIconDrawable="@android:drawable/ic_dialog_map"
                app:startIconTint="@color/fire_orange">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/schoolInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 年级下拉框 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_grade"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="4dp" />

            <Spinner
                android:id="@+id/gradeSpinner"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/spinner_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:spinnerMode="dropdown" />

            <!-- 班级下拉框 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_class"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="4dp" />

            <Spinner
                android:id="@+id/classSpinner"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/spinner_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:spinnerMode="dropdown" />

            <!-- 炉号下拉框 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_stove"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="4dp" />

            <Spinner
                android:id="@+id/stoveSpinner"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/spinner_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:spinnerMode="dropdown" />

            <!-- 小组人数（1-12） -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_member_count"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="4dp" />

            <Spinner
                android:id="@+id/memberCountSpinner"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/spinner_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:spinnerMode="dropdown" />

            <!-- 人员姓名标题 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_member_names"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp" />

            <!-- 人员姓名输入框容器（动态添加） -->
            <LinearLayout
                android:id="@+id/memberNamesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- 提示文本（当没有输入框时显示） -->
                <TextView
                    android:id="@+id/memberNamesHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="↑ 请先选择小组人数"
                    android:textColor="@color/subtitle_color"
                    android:textSize="14sp"
                    android:padding="16dp"
                    android:layout_gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <!-- 按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/resetButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/button_reset"
                android:textSize="16sp"
                app:cornerRadius="28dp"
                app:strokeColor="@color/fire_orange"
                app:strokeWidth="2dp"
                app:backgroundTint="@android:color/transparent"
                app:icon="@android:drawable/ic_menu_revert" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="@string/button_save"
                android:textSize="16sp"
                app:cornerRadius="28dp"
                app:backgroundTint="@color/nature_green"
                app:icon="@android:drawable/ic_menu_save" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/startButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="@string/button_start"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:backgroundTint="@color/fire_orange"
                app:icon="@android:drawable/ic_media_play" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
