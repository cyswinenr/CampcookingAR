<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background"
    tools:context=".SplashActivity">

    <!-- 背景渐变层 -->
    <View
        android:id="@+id/backgroundGradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_gradient" />

    <!-- 封面主图 -->
    <ImageView
        android:id="@+id/coverImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="40dp"
        android:contentDescription="@string/app_cover_desc"
        android:scaleType="fitCenter"
        android:src="@drawable/fengmian"
        app:layout_constraintBottom_toTopOf="@+id/appSubtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 清理数据按钮 - 左上角 -->
    <ImageButton
        android:id="@+id/clearDataButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="清理所有数据"
        android:tint="#F44336"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 网络设置按钮 - 右上角 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/networkSettingsButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        app:icon="@android:drawable/ic_menu_preferences"
        app:iconSize="24dp"
        app:iconTint="@color/text_primary"
        app:backgroundTint="@android:color/white"
        app:cornerRadius="24dp"
        app:elevation="4dp"
        android:contentDescription="网络设置"
        app:layout_constraintEnd_toStartOf="@+id/networkTestButton"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 网络测试按钮 - 右上角 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/networkTestButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        app:icon="@android:drawable/ic_menu_info_details"
        app:iconSize="24dp"
        app:iconTint="@color/nature_green"
        app:backgroundTint="@android:color/white"
        app:cornerRadius="24dp"
        app:elevation="4dp"
        android:contentDescription="网络测试"
        app:layout_constraintEnd_toStartOf="@+id/stoveSettingsButton"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 炉号设置按钮 - 右上角 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/stoveSettingsButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        app:icon="@android:drawable/ic_menu_edit"
        app:iconSize="24dp"
        app:iconTint="@color/fire_orange"
        app:backgroundTint="@android:color/white"
        app:cornerRadius="24dp"
        app:elevation="4dp"
        android:contentDescription="炉号设置"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 应用标题 -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/app_name"
        android:textColor="@color/title_color"
        android:textSize="48sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintBottom_toTopOf="@+id/appSubtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 副标题 -->
    <TextView
        android:id="@+id/appSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:text="@string/app_subtitle"
        android:textColor="@color/subtitle_color"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 进入应用按钮 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/enterButton"
        android:layout_width="200dp"
        android:layout_height="64dp"
        android:layout_marginBottom="60dp"
        android:text="@string/enter_app"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:cornerRadius="32dp"
        app:elevation="8dp"
        app:backgroundTint="@color/fire_orange"
        app:icon="@android:drawable/ic_media_play"
        app:iconSize="28dp"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 版本信息 -->
    <TextView
        android:id="@+id/versionInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/version_info"
        android:textColor="@color/version_color"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 炉号显示 - 右下角 -->
    <TextView
        android:id="@+id/stoveNumberDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text=""
        android:textColor="@color/fire_orange"
        android:textSize="48sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:fontFamily="sans-serif-medium"
        android:shadowColor="#80000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="6"
        android:background="@drawable/stove_number_background"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

