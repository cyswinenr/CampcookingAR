<?xml version="1.0" encoding="utf-8"?>
<!-- 菜单页面 - 横屏布局 -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".MenuActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 顶部标题栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="16dp"
                app:icon="@android:drawable/ic_menu_revert"
                app:iconSize="24dp"
                app:iconTint="@color/text_primary"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="28dp" />

            <TextView
                android:id="@+id/teamNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="团队名称"
                android:textColor="@color/title_color"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="菜单"
                android:textColor="@color/text_primary"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <!-- 说明区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- 小目标 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="一、小目标"
                    android:textColor="@color/title_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="一顿色香味形俱全的午餐；\n饭、菜、汤：广东老火汤、香米饭、4-5个菜；\n安全完成课程，炊具、餐具清洗干净摆放整齐、场地卫生好。"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:lineSpacingMultiplier="1.3"
                    android:layout_marginBottom="16dp" />

                <!-- 提供的食材及调味品 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="二、提供的食材及调味品"
                    android:textColor="@color/title_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="食材：米、排骨、瘦肉、一只鸡、番茄、鸡蛋、洋葱、土豆、胡萝卜、青瓜、青菜、葱、姜、蒜、冬瓜（或木瓜，实际以学校安排为准）。\n调味品：油、酱油、盐、生粉、豆豉、糖，白醋可向课任老师领取。"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:lineSpacingMultiplier="1.3" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 菜单输入区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- 汤输入 -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="汤"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundMode="outline">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/soupInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- 菜输入容器 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="菜："
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/dishContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <!-- 添加菜按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addDishButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ 添加菜"
                    android:textSize="16sp"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- 保存按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="保存菜单"
            android:textSize="20sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/fire_orange"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>

</FrameLayout>

