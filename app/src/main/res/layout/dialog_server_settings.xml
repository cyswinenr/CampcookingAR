<?xml version="1.0" encoding="utf-8"?>
<!-- 服务器设置对话框布局 -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="服务器IP地址"
        app:boxBackgroundMode="outline"
        app:startIconDrawable="@android:drawable/ic_menu_mylocation"
        app:startIconTint="@color/fire_orange">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/serverIpInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="服务器端口"
        app:boxBackgroundMode="outline"
        app:startIconDrawable="@android:drawable/ic_menu_compass"
        app:startIconTint="@color/fire_orange">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/serverPortInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="默认: 192.168.1.100:5000"
        android:textColor="@color/subtitle_color"
        android:textSize="12sp"
        android:layout_marginTop="8dp" />

</LinearLayout>

